  <script>
    (function initLang(){
      try{
        const saved = localStorage.getItem('rc_lang');
        if(saved){ setLang(saved); return; }
        const pref = (navigator.language || navigator.userLanguage || 'en').toLowerCase();
        setLang(pref.startsWith('tr') ? 'tr' : 'en');
      }catch(e){ setLang('en'); }
    })();

    function setLang(lang){
      const en = document.getElementById('lang-en');
      const tr = document.getElementById('lang-tr');
      const btnEn = document.getElementById('btn-en');
      const btnTr = document.getElementById('btn-tr');
      if(!en || !tr) return;
      if(lang === 'tr'){
        en.classList.add('hidden');
        tr.classList.remove('hidden');
        if(btnEn) btnEn.setAttribute('aria-pressed','false');
        if(btnTr) btnTr.setAttribute('aria-pressed','true');
        document.documentElement.lang = 'tr';
      }else{
        tr.classList.add('hidden');
        en.classList.remove('hidden');
        if(btnEn) btnEn.setAttribute('aria-pressed','true');
        if(btnTr) btnTr.setAttribute('aria-pressed','false');
        document.documentElement.lang = 'en';
      }
    }

    function switchLang(lang){
      try{ localStorage.setItem('rc_lang', lang); }catch(e){}
      setLang(lang);
    }
  </script>
